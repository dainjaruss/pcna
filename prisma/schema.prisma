// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id                String       @id @default(cuid())
  title             String
  summary           String       @db.Text
  content           String?      @db.Text
  url               String       @unique
  imageUrl          String?
  source            Source       @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  sourceId          String
  credibilityRating Int          @default(5) // 1-10 scale
  publishDate       DateTime
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  userRatings       UserRating[]
  categories        String[]     @default([])
  celebrities       String[]     @default([])
  archived          Boolean      @default(false)
  interactions      UserInteraction[]
  
  @@index([publishDate(sort: Desc)])
  @@index([sourceId])
  @@index([createdAt(sort: Desc)])
  @@index([archived])
}

model UserRating {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String
  rating    Int      // 1-5 stars or 1-10 scale
  feedback  String?  // optional: like, dislike, etc.
  createdAt DateTime @default(now())
  
  @@index([articleId])
  @@index([rating])
  @@index([userId])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

model EmailRecipient {
  id        String   @id @default(cuid())
  email     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

// New models for multi-user and summarization features
model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  isAdmin      Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sources      Source[]  @relation("OwnerSources")
  settings     UserSetting?
  refreshTokens RefreshToken[]
  ratings      UserRating[]
  interactions UserInteraction[]
}

model UserSetting {
  id             String   @id @default(cuid())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String   @unique
  retentionDays  Int      @default(30)
  dailySummaryAt String?  // e.g. "06:00"
  preferredCelebrities String[] @default([])
  preferredCategories  String[] @default([])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Summary {
  id         String   @id @default(cuid())
  title      String
  content    String   @db.Text
  citations  String[] @default([])
  generatedAt DateTime @default(now())
  sourceIds  String[] @default([])
  authorId   String?  
}

model RefreshToken {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  expiresAt  DateTime
  revoked    Boolean  @default(false)
  createdAt  DateTime @default(now())
  replacedBy String?
}

// User interaction tracking for enhanced ML personalization
model UserInteraction {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  article       Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId     String
  interactionType String  // 'view', 'click', 'rate', 'share', 'save'
  duration      Int?     // time spent in seconds (for views)
  metadata      Json?    // additional data like scroll depth, etc.
  createdAt     DateTime @default(now())
  
  @@index([userId, interactionType])
  @@index([articleId])
  @@index([createdAt])
}

// Make Source optionally owned by a User and mark custom flag
model Source {
  id               String    @id @default(cuid())
  name             String    @unique
  url              String
  enabled          Boolean   @default(true)
  credibilityRating Int      @default(5) // 1-10 scale
  type             String    @default("rss") // rss, scrape, api
  rssUrl           String?
  isCustom         Boolean   @default(false)
  owner           User?      @relation("OwnerSources", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId         String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  articles         Article[]
  
  @@index([enabled])
}
